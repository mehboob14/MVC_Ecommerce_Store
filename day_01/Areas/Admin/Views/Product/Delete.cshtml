@model Product

<form method="post" class="p-4 border rounded shadow-sm bg-light mx-auto" style="max-width: 600px;">
    <h2 class="text-primary mb-4 text-center">Delete Product</h2>
    <div asp-validation-summary="ModelOnly"></div>
    <div class="mb-3">
        <label asp-for="Title" for="productName" class="form-label">Product Name</label>
        <input asp-for="Title" class="form-control" disabled placeholder="Enter product name" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" for="productDescription" class="form-label">Product Description</label>
        <input asp-for="Description" class="form-control" disabled placeholder="Ener Display Order" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ISBN" for="productDescription" class="form-label">Product Description</label>
        <input asp-for="ISBN" class="form-control" disabled placeholder="Ener Display Order" />
        <span asp-validation-for="ISBN" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Author" for="productDescription" class="form-label">Product Description</label>
        <input asp-for="Author" class="form-control" disabled placeholder="Ener Display Order" />
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ListPrice" for="productDescription" class="form-label">Product Description</label>
        <input asp-for="ListPrice" class="form-control" disabled placeholder="Ener Display Order" />
        <span asp-validation-for="ListPrice" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price50" for="productDescription" class="form-label">Product Description</label>
        <input asp-for="Price50" class="form-control" disabled placeholder="Ener Display Order" />
        <span asp-validation-for="Price50" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price100" for="productDescription" class="form-label">Product Description</label>
        <input asp-for="Price100" class="form-control" disabled placeholder="Ener Display Order" />
        <span asp-validation-for="Price100" class="text-danger"></span>
    </div>
    <div class="d-flex justify-content-between">
        <button type="submit" asp-controller="Product" class="btn btn-outline-danger">Delete</button>
        <a asp-action="Index" asp-controller="Product" class="btn btn-outline-secondary">Back to List</a>
    </div>
</form>


