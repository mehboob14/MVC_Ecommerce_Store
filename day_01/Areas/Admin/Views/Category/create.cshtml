@model Category

    <form method="post" class="p-4 border rounded shadow-sm bg-light mx-auto" style="max-width: 600px;">
        <h2 class="text-primary mb-4 text-center">Edit Category</h2>
        @* <div asp-validation-summary="All"></div> *@
       @*  <div asp-validation-summary="None"></div> *@
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3">
            <label asp-for="Name" for="categoryName" class="form-label">Category Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter category name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrders" for="categoryDescription" class="form-label">Category Description</label>
            <input asp-for="DisplayOrders" class="form-control" placeholder="Ener Display Order"/>
        <span asp-validation-for="DisplayOrders" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-between">
            <button type="submit" asp-controller="Category" class="btn btn-primary">Create</button>
            <a asp-action="Index" asp-controller="Category" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
    @section Scripts{
        @{
        <partial name="_ValidationScriptsPartial" />
        }
    }

