@model List<Category>
<partial name="_Notification" />
<div class="container mt-5">
    <div class="row align-items-center mb-4">
        <div class="col-md-6">
            <h2 class="text-primary">Categories List</h2>
        </div>
        <div class="col-md-6 text-md-end text-start mt-3 mt-md-0">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Category
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="table-primary">
                <tr>
                    <th>Category Name</th>
                    <th>Display Orders</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>                   
                        <td>@obj.Name</td>
                        <td>@obj.DisplayOrders</td>
                        <td><a class="btn" asp-controller="Category" asp-action="Edit" asp-route-Id="@obj.Id"><i class="bi bi-pencil-square"></i></a></td>
                        <td><a class="btn" asp-controller="Category" asp-action="Delete" asp-route-Id="@obj.Id"> <i class="bi bi-trash3"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
